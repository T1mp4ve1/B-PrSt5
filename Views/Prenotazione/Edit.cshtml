@model Hotel.Models.PrenotazioneModel
@{
    var camere = ViewBag.Camere as List<Hotel.Models.CameraModel>;
}

<h2>Modifica Prenotazione</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PrenotazioneId" />

    <div class="form-group mb-2">
        <label>Camera</label>
        <select asp-for="CameraId" class="form-control">
            @foreach (var c in camere)
            {
                <option value="@c.CameraId" selected="@(c.CameraId == Model.CameraId)">
                    @c.Numero
                </option>
            }
        </select>
        <span asp-validation-for="CameraId" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Data Inizio</label>
        <input asp-for="DataInizio" type="date" class="form-control" />
        <span asp-validation-for="DataInizio" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Data Fine</label>
        <input asp-for="DataFine" type="date" class="form-control" />
        <span asp-validation-for="DataFine" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Stato</label>
        <input asp-for="Stato" type="checkbox" />
        <span asp-validation-for="Stato" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salva</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>