@model Hotel.Models.RegistrationModel

@{
    ViewData["Title"] = "Modifica Utente";
}

<h2>Modifica Utente</h2>

<form asp-action="Edit" method="post">
    <div class="form-group mb-2">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Cognome</label>
        <input asp-for="Cognome" class="form-control" />
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Telefono</label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salva</button>
    <a asp-action="List" class="btn btn-secondary">Annulla</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}